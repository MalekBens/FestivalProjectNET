@{
    ViewData["Title"] = "Home Page";
    List<Plan> plans = ViewData["plans"] as List<Plan>;
}

<div class="pagetitle">
    <h1>Plans</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Plans</li>
        </ol>
    </nav>
</div>
<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-12">
            <div class="row">

                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto" style="border-radius: 25px;padding: 30px;">
                        <div class="card-body">
                            <h5 class="card-title">Edit Plans Prices <span>| Today @DateTime.Now</span></h5>

                            <table class="table-borderless datatable">
                                <thead>
                                    <tr>

                                        <th scope="col">#</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Price (TND)</th>
                                        <th scope="col">Edit Price</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in plans)
                                    {
                                        <tr>
                                            <th scope="row"><a href="#">#@item.ID</a></th>
                                            <td>@item.name</td>
                                            <td>@item.description</td>
                                            <td>@item.price TND</td>
                                            <td> <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                data-bs-target="#ID-@item.ID">
                                                    Edit Price
                                                </button>
                                                <div class="modal fade" id="ID-@item.ID" tabindex="-1">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Edit the Price</h5>
                                                                <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <form action="/Admin/Plans/@item.ID" method="post">
                                                                <div class="modal-body">

                                                                    <div class="input-group mb-3">
                                                                        <span class="input-group-text">TND</span>
                                                                        <input type="number" class="form-control"
                                                                        value="@item.price" name="price" required>
                                                                        <span class="input-group-text">.00</span>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Close</button>
                                                                    <button type="submit" class="btn btn-primary">Save
                                                                        changes</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>


                        </div>

                    </div>
                </div><!-- End Recent Sales -->

            </div>
        </div>
    </div>
</section>
