<div class="pagetitle">
    <h1>List Of Events</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Events List</li>
        </ol>
    </nav>
</div>
<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-12">
            <div class="row">

                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto" style="border-radius: 25px;padding: 30px;">
                        <div class="card-body">
                            <h5 class="card-title">Recent Events <span>| Today @DateTime.Now</span></h5>

                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        
                                        <th scope="col">#</th>
                                        <th scope="col">Event Name</th>
                                        <th scope="col">Event Description</th>
                                        <th scope="col">Presenter</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Location</th>
                                        <th scope="col">Settings</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row"><a href="#">#2147</a></th>
                                        <td>Bridie Kessler</td>
                                        <td>Bridie Kessler</td>
                                        <td>At praesentium minu</td>
                                        <td>At praesentium minu</td>
                                        <td>At praesentium minu</td>
                                        
                                        <td>
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                data-bs-target="#ID">
                                                Edit Event
                                            </button>
                                            <div class="modal fade" id="ID" tabindex="-1">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Edit the Event Info</h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="card-body mt-5">
                                                            <form class="row g-3" action="/Home/editEvent"
                                                                method="POST">
                                                                <div class="col-md-6">
                                                                    @* <label for="validationCustom01"
                                                                        class="form-label">Event Name</label> *@
                                                                    <div class="form-floating">

                                                                        <input type="text" class="form-control"
                                                                            id="floatingName" placeholder="Event Name"
                                                                            name="eventName" required value="" disabled>
                                                                        <label for="floatingName">Event Name</label>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-floating">
                                                                        <input type="text" class="form-control"
                                                                            id="floatingName" placeholder="Your Name"
                                                                            name="presenterName" required>
                                                                        <label for="floatingName">Presenter Name</label>
                                                                    </div>
                                                                </div>

                                                                <div class="col-12">
                                                                    <div class="form-floating">
                                                                        <textarea class="form-control"
                                                                            placeholder="Address" id="floatingTextarea"
                                                                            style="height: 100px;" name="eventDesc"
                                                                            required></textarea>
                                                                        <label for="floatingTextarea">Event
                                                                            Description</label>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="col-md-12">
                                                                        <div class="form-floating">
                                                                            <input type="text" class="form-control"
                                                                                id="floatingCity" placeholder="Category"
                                                                                name="category" required>
                                                                            <label for="floatingCity">Category</label>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="col-md-12">
                                                                        <div class="form-floating">
                                                                            <input type="text" class="form-control"
                                                                                id="floatingCity" placeholder="Location"
                                                                                name="location" required>
                                                                            <label for="floatingCity">Location
                                                                                Address</label>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="text-center">
                                                                    <button type="submit"
                                                                        class="btn btn-primary">Submit</button>
                                                                    <button type="reset"
                                                                        class="btn btn-secondary">Reset</button>
                                                                </div>
                                                            </form><!-- End floating Labels Form -->
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                        </div><!-- End Vertically centered Modal-->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#basicModal">
               Delete
              </button>
              <div class="modal fade" id="basicModal" tabindex="-1">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Delete Event</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this event?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                      <button type="button" class="btn btn-primary">Yes</button>
                    </div>
                  </div>
                </div>
              </div><!-- End Basic Modal-->
                        </td>
                        </tr>
